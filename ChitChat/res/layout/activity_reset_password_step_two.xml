<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context="com.example.chitchat.ResetPasswordStepTwoActivity" >

    <include layout="@layout/title" />

    <TextView
        android:id="@id/tvTips"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginTop="70.0dip"
        android:gravity="left"
        android:textColor="@color/chatrow_tease_text_color" />

    <LinearLayout
        android:id="@id/llVerifyCode"
        android:layout_width="fill_parent"
        android:layout_height="56.0dip"
        android:layout_below="@id/tvTips"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/bg_round_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/tvVerifyCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:text="@string/activity_resetpasswordsecondstep_tvVerifyCode"
            android:textColor="#ff282828"
            android:textSize="19.0dip" />

        <EditText
            android:id="@id/edtVerifyCode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:background="@android:color/transparent"
            android:hint="@string/activity_resetpasswordsecondstep_edtVerifyCode"
            android:singleLine="true"
            android:textColor="#ff282828"
            android:textColorHint="#ff9f9f9f"
            android:textSize="19.0dip" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llVerifyCode"
        android:layout_marginTop="25.0dip" >

        <TextView
            android:id="@id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ff7f7f7f"
            android:textSize="13.0dip" />

        <TextView
            android:id="@id/tvResend"
            android:layout_width="100.0dip"
            android:layout_height="30.0dip"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_green_reset_second"
            android:gravity="center"
            android:text="重发验证码"
            android:textColor="#ffffffff"
            android:textSize="14.0dip"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>