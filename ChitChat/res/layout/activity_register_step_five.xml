<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context="com.example.chitchat.RegisterStepFiveActivity" >

    <include layout="@layout/title" />

    <View
        android:id="@id/line1"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="90.0dip"
        android:background="@color/clbg_diliver_color" />

    <RelativeLayout
        android:id="@id/rlSex"
        android:layout_width="fill_parent"
        android:layout_height="57.0dip"
        android:layout_below="@id/line1"
        android:background="#ffffffff"
        android:paddingLeft="18.0dip"
        android:paddingRight="30.0dip" >

        <LinearLayout
            android:id="@id/llSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:id="@id/tvSexTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="5.0dip"
                android:background="@android:color/transparent"
                android:text="@string/activity_register_fifthstep_tvSexTitle"
                android:textColor="#ff3f4345"
                android:textSize="16.0dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/llSexButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <Button
                android:id="@id/btnBoy"
                android:layout_width="40.0dip"
                android:layout_height="26.0dip"
                android:background="@drawable/selector_sex_boy" />

            <TextView
                android:id="@id/tvBoy"
                android:layout_width="20.0dip"
                android:layout_height="26.0dip"
                android:layout_marginLeft="6.0dip"
                android:text="男"
                android:textColor="@color/gender_not_select_font"
                android:textSize="18.0sp" />

            <Button
                android:id="@id/btnGirl"
                android:layout_width="40.0dip"
                android:layout_height="26.0dip"
                android:layout_marginLeft="18.0dip"
                android:background="@drawable/selector_sex_girl" />

            <TextView
                android:id="@id/tvGirl"
                android:layout_width="20.0dip"
                android:layout_height="26.0dip"
                android:layout_marginLeft="6.0dip"
                android:text="女"
                android:textColor="@color/gender_not_select_font"
                android:textSize="18.0sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_below="@id/rlSex"
        android:background="@color/clbg_diliver_color" />

    <RelativeLayout
        android:id="@id/rlBirth"
        android:layout_width="fill_parent"
        android:layout_height="57.0dip"
        android:layout_below="@id/line2"
        android:background="#ffffffff"
        android:paddingLeft="18.0dip"
        android:paddingRight="14.0dip" >

        <TextView
            android:id="@id/tvBirthTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text="@string/activity_register_fifthstep_tvBirthTitle"
            android:textColor="#ff3f4345"
            android:textSize="16.0dip" />

        <TextView
            android:id="@id/tvBirthText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:text=""
            android:textColor="#ff9f9f9f"
            android:textSize="14.0dip" />
    </RelativeLayout>

    <TextView
        android:id="@id/tvSexTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlBirth"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@android:color/transparent"
        android:text="@string/activity_register_fifthstep_tvSexTip"
        android:textColor="#ff9f9f9f"
        android:textSize="14.0dip" />

    <View
        android:id="@id/line3"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_below="@id/tvSexTip"
        android:background="@color/clbg_diliver_color" />

    <DatePicker
        android:id="@id/dpBirth"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line3"
        android:layout_marginTop="10.0dip"
        android:calendarViewShown="false"
        android:gravity="center"
        android:scaleX="1.2"
        android:scaleY="1.2" />

</RelativeLayout>