<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context="com.example.chitchat.RegisterStepOneActivity" >

    <include layout="@layout/title" />

    <LinearLayout
        android:id="@id/llSelectCountry"
        android:layout_width="fill_parent"
        android:layout_height="49.0dip"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="70.0dip"
        android:background="@drawable/bg_round_white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/tvDistrictNo"
            android:layout_width="69.0dip"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text=""
            android:textColor="#ff282828"
            android:textSize="19.0dip" />

        <View
            android:id="@id/viewLineSelectCountry"
            android:layout_width="1.0px"
            android:layout_height="fill_parent" />

        <RelativeLayout
            android:id="@id/rlSelectCountry"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@id/tvSelectCountry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60.0dip"
                android:background="@android:color/transparent"
                android:text=""
                android:textColor="#ff282828"
                android:textSize="19.0dip" />

            <ImageView
                android:layout_width="13.0dip"
                android:layout_height="13.0dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="23.0dip"
                android:layout_marginRight="15.0dip"
                android:src="@drawable/icon_friend_right_arrow" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@id/llInputMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llSelectCountry"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/bg_round_white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@id/llMobile"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@id/ivMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="23.0dip"
                android:layout_marginTop="11.0dip"
                android:background="@drawable/icon_login_phone" />

            <EditText
                android:id="@id/edtMobile"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="10.0dip"
                android:layout_toLeftOf="@id/btnMobileCancle"
                android:layout_toRightOf="@id/ivMobile"
                android:background="@android:color/transparent"
                android:hint="@string/activity_register_firststep_edtMobile"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#ff222222"
                android:textColorHint="#ffcdcdcd"
                android:textSize="17.0dip" />

            <Button
                android:id="@id/btnMobileCancle"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/icon_cancel"
                android:gravity="center_vertical"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@id/line1"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/clbg_diliver_color" />
    </LinearLayout>

    <TextView
        android:id="@id/tvTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llInputMessage"
        android:layout_marginLeft="17.0dip"
        android:layout_marginTop="20.0dip"
        android:textColor="#ff9f9f9f"
        android:textSize="14.0dip" />

</RelativeLayout>